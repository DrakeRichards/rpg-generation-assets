{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/DrakeRichards/rpg-generation-assets/characters/character.schema.json",
    "title": "Character",
    "description": "A character in a role-playing game.",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the character.",
            "default": ""
        },
        "race": {
            "type": "string",
            "description": "The character's race.",
            "default": ""
        },
        "gender": {
            "type": "string",
            "description": "The character's gender.",
            "default": ""
        },
        "occupation": {
            "type": "string",
            "description": "The character's occupation.",
            "default": ""
        },
        "overview": {
            "type": "string",
            "description": "An overview of the character's personality and background.",
            "default": ""
        },
        "physicalDescription": {
            "type": "string",
            "description": "A description of the character's physical appearance.",
            "default": ""
        },
        "voiceDescription": {
            "type": "string",
            "description": "A brief description of the character's voice, to help game masters role-play the character.",
            "default": ""
        },
        "behaviorQuirk": {
            "type": "string",
            "description": "A quirk or behavior that the character exhibits. Useful to make NPCs stand out from each other.",
            "default": ""
        },
        "likes": {
            "type": "string",
            "description": "Things that the character likes.",
            "default": ""
        },
        "dislikes": {
            "type": "string",
            "description": "Things that the character dislikes.",
            "default": ""
        },
        "personalGoals": {
            "type": "string",
            "description": "What does this character want to achieve?",
            "default": ""
        },
        "hook": {
            "type": "string",
            "description": "A hook to help game masters introduce the character into the story, such as a small problem the character is currently facing.",
            "default": ""
        }
    }
}